<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SiteName | Home</title>
    <meta
      name="description"
      content="Web sports search engine, which helps you find quality sports streams over online. We mostly list SiteName that can be stream over all the devices"
    />
    <meta
      name="keywords"
      content="football stream, nfl stream, soccer stream, tennis stream, basketball stream, hockey stream, nba stream, baseball stream, live football, live nfl, live soccer, live tennis, live basketball, live hockey, live nba, live baseball, live mlb"
    />
    <meta name="author" content="Admin" />
    <meta name="robots" content="index, follow" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.38/moment-timezone-with-data.min.js"></script>
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %>

    <div class="container-fluid mt-2 mb-5">
      <div class="row">
        <div class="col-12 d-flex justify-content-center">
          <h3>Live Streams Online</h3>
        </div>

        <div class="col-12 my-4">
          <button
            class="btn btn-outline-info fs-5 fw-bold rounded-5"
            id="clock"
            style="visibility: hidden"
          >
            Time
          </button>
        </div>

        <div class="col-lg-8 mb-5">
          <%- include("./partials/search.ejs") %>

          <div class="col-12 mb-2">
            <button class="btn btn-info text-white w-100 rounded-5 fw-bold">
              No Data Found
            </button>
          </div>
        </div>

        <div class="col-lg-4">
          <%- include("./partials/sidebarContent.ejs") %>
        </div>
      </div>
    </div>

    <%- include("./partials/footer.ejs") %>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script>
      $(".link-dark, .match").click(function () {
        const link = $(this).data("href");

        window.location.href = link;
      });

      const clockDisplay = document.getElementById("clock");

      function updateClock() {
        // Get current time in the UK timezone
        const ukTime = moment.tz("Europe/London").format("DD-MM-YYYY HH:mm:ss");

        clockDisplay.textContent = "UK Time: " + ukTime;
        clockDisplay.style.visibility = "visible";
      }

      // Update the clock initially
      updateClock();

      // Update the clock every second
      setInterval(updateClock, 1000);
    </script>
  </body>
</html>
